<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner"
    android:layout_marginBottom="@dimen/_30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:padding="@dimen/_15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="end"
            android:paddingHorizontal="@dimen/_14dp"
            android:paddingVertical="@dimen/_10dp"
            android:layout_marginVertical="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
             android:background="@drawable/ic_close"
            tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_jobstatus"
            android:layout_width="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="@dimen/_10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sourcesanspro_regular"
             android:text="Select Engineer"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_dropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:background="@drawable/child_back_ground"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/leavecode_drp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textSize="16sp" />




        </LinearLayout>


    </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/green_button_background_with_radius"
            android:elevation="1dp"
            android:stateListAnimator="@animator/button_elevation"
            android:text="Submit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>











</RelativeLayout>
